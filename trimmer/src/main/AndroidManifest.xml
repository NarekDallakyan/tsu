<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="social.tsu.trimmer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" tools:node="replace"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning, LockedOrientationActivity">
        <activity
            android:name="social.tsu.trimmer.features.select.VideoSelectActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="social.tsu.trimmer.features.trim.VideoTrimmerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="social.tsu.trimmer.features.record.VideoRecordActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>