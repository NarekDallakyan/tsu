<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@id/exo_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            style="@style/TSUPlayerButton.Play"
            android:layout_width="@dimen/video_play_btn_size"
            android:layout_height="@dimen/video_play_btn_size"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/control_mute"
        style="@style/TSUPlayerButton.Mute"
        android:layout_width="@dimen/video_mute_btn_size"
        android:layout_height="@dimen/video_mute_btn_size"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/video_mute_btn_margin"
        android:layout_marginBottom="@dimen/video_mute_btn_margin" />

</FrameLayout>
