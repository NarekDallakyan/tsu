<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/chrono_text_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/feed_type_item_height"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:text="@string/feed_type_chronological"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:backgroundTint="@color/white"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chrono_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default_medium"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/chrono_text_view"
        app:layout_constraintEnd_toEndOf="@id/chrono_text_view"
        app:layout_constraintTop_toTopOf="@id/chrono_text_view"
        app:srcCompat="@drawable/ic_check_active" />

    <TextView
        android:id="@+id/trending_text_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/feed_type_item_height"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:text="@string/feed_type_trending_beta"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chrono_text_view" />

    <ImageView
        android:id="@+id/trending_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default_medium"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/trending_text_view"
        app:layout_constraintEnd_toEndOf="@id/trending_text_view"
        app:layout_constraintTop_toTopOf="@id/trending_text_view"
        app:srcCompat="@drawable/ic_check_active" />

</androidx.constraintlayout.widget.ConstraintLayout>